extends: 'eslint:recommended'

parserOptions:
  ecmaVersion: 8

env:
  es6: true
  node: true
  mocha: true

globals:
  Promise: true
  log: true
  redis: true
  server: true
  Model: true
  Schema: true
  Message: true
  Listener: true
  Services: true
  request: true
  expect: true
  nock: true
  api: true
  config: true

rules:
  comma-style: error
  consistent-this:
    - error
    - _this
  indent:
    - error
    - 2
    - SwitchCase: 1
      VariableDeclarator: 2
  keyword-spacing: error
  no-console: error
  no-multi-spaces: off
  no-spaced-func: error
  no-trailing-spaces: error
  quotes:
    - error
    - single
  semi:
    - error
    - never
  curly:
    - error
  prefer-arrow-callback: error
  space-before-blocks: error
  space-before-function-paren:
    - error
    - never
  space-infix-ops: error
  space-unary-ops: error
  key-spacing:
    - error
    -
      align:
        beforeColon: false
        afterColon: true
        on: value
